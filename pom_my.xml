		<hibernate-search-version>3.4.1.Final</hibernate-search-version>
		<hibernate-c3p0-version>4.0.1.Final</hibernate-c3p0-version>
		<spring.security-version>3.0.5.RELEASE</spring.security-version>
		<spring.amqp.version>1.0.0.RELEASE</spring.amqp.version>
		<spring.data.jpa.version>1.2.0.RELEASE</spring.data.jpa.version>
		<spring.data.rest.webmvc.version>1.0.0.RELEASE</spring.data.rest.webmvc.version>
		<spring.integration.version>2.1.3.RELEASE</spring.integration.version>	
